{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<!-- start site's main content area -->
<section class="content-wrap archive">
	<div class="container">
		<div class="row">
			<!-- start main post area -->
			<div class="col-md-12 main-content">
				<!-- start post -->
				{{#post}}
				<article class="{{post_class}}">
					<div class="post-head">
						<h1 class="post-title h2">{{{title}}}</h1>
					</div>
					{{#if feature_image}}
					<div class="featured-media" style="background-image: url({{feature_image}});">
					</div>
					{{/if}}
					<div class="post-content">
						{{content}}
					</div>
				</article>
				{{/post}}
				<!-- end post -->
			</div>
            
            {{#get "authors" limit="all" include="count.posts" order="count.posts desc"}}
            {{#foreach authors}}
            <div class="col-md-6">
                <div class="about-author clearfix">
                    {{#if profile_image}}
                        <a href="{{url}}"><img src="{{profile_image}}" alt="Author image" class="avatar pull-left"></a>
                        {{else}}
                        <a href="{{url}}"><img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar pull-left"></a>
                    {{/if}}
                    <div class="details">
                        <div class="author">
                            {{t "About"}} <a href="{{url}}">{{name}}</a>
                        </div>
                        <div class="meta-info">
                            <span class="post-count"><i class="fa fa-pencil-square-o"></i><a href="{{url}}">{{plural count.posts empty=(t "0 Post") singular=(t "% Post") plural=(t "% Posts")}}</a></span>
                            {{#if location}}
                                <span class="loaction"><i class="fa fa-home"></i>{{location}}</span>
                            {{/if}}
                            {{#if website}}
                            <span class="website"><i class="fa fa-globe"></i><a href="{{website}}" targer="_BLANK">{{t "Website"}}</a></span>
                            {{/if}}
                            {{#if twitter}}
                            <span class="twitter"><a href="{{twitter_url}}"><i class="fa fa-twitter"></i></a></span>
                            {{/if}}
                            {{#if facebook}}
                            <span class="facebook"><a href="{{facebook_url}}"><i class="fa fa-facebook"></i></a></span>
                            {{/if}}
                        </div>
                        {{#if bio}}
                        <div class="bio">
                            {{{bio}}}
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/foreach}}
            {{/get}}
            
			<!-- end main post area -->
		</div>
	</div>
</section>
<!-- end site's main content area -->