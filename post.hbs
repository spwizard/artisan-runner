{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<!-- start site's main content area -->
<section class="content-wrap">
	<div class="container">
		<div class="row">
			<!-- start main post area -->
			<div class="col-md-8 main-content">
				<!-- start post -->
				{{#post}}
				<article class="{{post_class}}">
					<div class="post-head">
						<h1 class="post-title h2">{{{title}}}</h1>
						<div class="post-meta">
							<span class="author">{{t "By"}} {{authors separator=", "}}</span> &bull;
							<span class="date">{{date format="MMMM DD, YYYY"}}</span> &bull;
						</div>
					</div>
					{{#if feature_image}}
					<div class="featured-media">
						<img src="{{feature_image}}" alt="{{{title}}}">
					</div>
					{{/if}}
					<div class="post-content">
						{{#if access}}
						{{content}}
						{{else}}
						<div class="excerpt">
						{{excerpt}}
						</div>
						<div class="no-access-message">
                            {{t "You don't have access to this post on"}} <strong>{{@site.title}}</strong> {{t "at the moment, but if you upgrade your account you'll be able to see the whole thing, as well as all the other posts in the archive! Subscribing only takes a few seconds and will give you immediate access."}}
                        </div>
						<div class="post-upgrade-cta-box text-center">
							{{#if @member}}
							<h2 class="h3 cta-title">{{t "This post is for paying subscribers only"}}</h2>
							{{else}}
							<h2 class="h4 cta-title">{{t "This post is for subscribers only"}}</h2>
							{{/if}}
							<a class="btn btn-default btn-cta" href="{{@site.url}}/signup/">{{t "Subscribe now"}}</a>
							<div class="sign-in-cta"><small>{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small></div>
						</div>
						{{/if}}
					</div>
					<footer class="post-footer clearfix">
						<div class="pull-left tag-list">
							{{#if tags}}
							<i class="fa fa-folder-open-o"></i>
							{{tags separator=","}}
							{{/if}}
						</div>
						<div class="pull-right share">
							{{! insert share_links partials}}
							{{> share_links}}
						</div>
					</footer>
				</article>
				{{> about-author}}
				{{> prev-next}}
				{{/post}}
				<!-- end post -->
			</div>
			<!-- end main post area -->
			{{! insert sidebar partial}}
			{{> sidebar}}
		</div>
	</div>
</section>
<!-- end site's main content area -->